<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/login_bg"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.liberty.wikepro.view.activity.LoginActivity">
    <RelativeLayout
        android:id="@+id/splashContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/logo"
            android:layout_centerInParent="true"
            android:src="@drawable/wike_splash"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <LinearLayout
            android:id="@+id/go_container"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="-50dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/go_login"
                android:text="登录"
                android:textColor="@color/color_selector"
                android:textSize="17sp"
                android:background="@drawable/corner_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"/>
            <Button
                android:id="@+id/go_register"
                android:text="注册"
                android:textColor="@color/color_selector"
                android:textSize="17sp"
                android:background="@drawable/corner_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/loginContainer"
        android:layout_centerVertical="true"
        android:background="#fff"
        android:orientation="vertical"
        android:elevation="5dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="-300dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/loginTitleContainer"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/back"
                app:srcCompat="@drawable/ic_back"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="登录"
                android:textSize="30sp"
                android:textColor="#fff"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <LinearLayout
            android:layout_below="@id/loginTitleContainer"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="60dp"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputLayout
                android:layout_marginBottom="10dp"
                android:hint="请输入邮箱或手机号码"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/user"
                    android:textSize="13sp"
                    android:drawableRight="@drawable/ic_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_marginBottom="10dp"
                android:hint="请输入登录密码"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/password"
                    android:textSize="13sp"
                    android:inputType="textPassword"
                    android:drawableRight="@drawable/ic_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/loginBtn"
                android:background="@drawable/btn_bg"
                android:text="登录"
                android:textColor="#fff"
                android:textSize="17sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/registerContainer"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="#fff"
        android:elevation="5dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="-300dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/registerTitleContainer"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/backRegister"
                app:srcCompat="@drawable/ic_angle"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="注册"
                android:textSize="30sp"
                android:textColor="#fff"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <LinearLayout
            android:layout_below="@id/registerTitleContainer"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="60dp"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:visibility="visible"
                    android:id="@+id/registerInfoContainer1"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputLayout
                        android:layout_marginBottom="10dp"
                        android:hint="请输入邮箱或手机号码"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/loginNameRegister"
                            android:textSize="13sp"
                            android:maxLength="40"
                            android:drawableRight="@drawable/ic_user"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_marginBottom="10dp"
                        android:hint="请输入用户名"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/userRegister"
                            android:textSize="13sp"
                            android:maxLength="20"
                            android:drawableRight="@drawable/ic_user"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:hint="请输入登录密码"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/passwordRegister"
                            android:textSize="13sp"
                            android:maxLength="10"
                            android:inputType="textPassword"
                            android:drawableRight="@drawable/ic_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/registerInfoContainer2"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputLayout
                        android:layout_marginBottom="10dp"
                        android:hint="请输入姓名"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/nameRegister"
                            android:textSize="13sp"
                            android:maxLength="5"
                            android:drawableRight="@drawable/ic_user"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="性别"
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <RadioGroup
                            android:id="@+id/gender_rg"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <android.support.v7.widget.AppCompatRadioButton
                                android:id="@+id/female"
                                android:button="@null"

                                android:layout_margin="10dp"
                                android:drawableLeft="@drawable/female"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <android.support.v7.widget.AppCompatRadioButton
                                android:id="@+id/male"
                                android:button="@null"
                                android:layout_margin="10dp"
                                android:drawableLeft="@drawable/male"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </RadioGroup>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/registerBtn"
                android:layout_below="@id/registerInfoContainer1"
                android:background="@drawable/btn_bg"
                android:text="下一步"
                android:textColor="#fff"
                android:textSize="17sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
